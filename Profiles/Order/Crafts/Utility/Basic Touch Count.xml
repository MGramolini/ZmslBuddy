<?xml version="1.0" encoding="utf-8" ?>
<Profile>
  <Name>Use Basic Touch with Count</Name>
  <Order>
    
    <ResetCount name="PtRan" />
    
    <IfCount name="TotCount" method="GreaterThan" value="0">

      <If condition="CraftingManager.Condition == CraftingCondition.Good">
        <IncrementCount name="PtRan" />
        <RunProfile path="Profiles/ZmslBuddy/Skills/Precise Touch.xml" /> 
      </If>
      <IfCount name="PtRan" method="GreaterThan" value="0" modifier="Not">
        <RunProfile path="Profiles/ZmslBuddy/Skills/Standard Touch.xml" />
      </IfCount>

    </IfCount>
    <IfCount name="TotCount" method="GreaterThan" value="0" modifier="Not">
      <RunProfile path="Profiles/ZmslBuddy/Skills/Basic Touch.xml"/>
    </IfCount>

    <DecrementCount name="TotCount"/>
    <ResetCount name="PtRan" />
    
  </Order>
</Profile>